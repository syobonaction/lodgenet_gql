type Query {
  currentWeather(lat: String!, lon: String!): CurrentWeather!
}

type CurrentWeather {
  weather: [Weather!]!
  atmosphere: Atmosphere!
  conditions: Conditions!
}

type Weather {
  id: Int!
  type: String!
  description: String!
  icon: String!
}

type Atmosphere {
  temperature: Temperature!
  pressure: Int
  humidity: Int
}

type Temperature {
  real: Float!
  min: Float!
  max: Float!
  feelslike: Float!
}

type Wind {
  speed: Float!
  degree: Int!
  gust: Float!
}

type Conditions {
  wind: Wind!
  sunrise: Int!
  sunset: Int!
}